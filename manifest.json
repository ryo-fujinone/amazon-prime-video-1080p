{
  "name": "Amazon Prime Video 1080p",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Amazon Prime Video 1080p",
  "content_scripts": [{
    "matches": [
      "https://*.amazon.co.jp/*",
      "https://*.amazon.com/*",
      "https://*.amazon.ae/*",
      "https://*.amazon.co.uk/*",
      "https://*.amazon.it/*",
      "https://*.amazon.in/*",
      "https://*.amazon.eg/*",
      "https://*.amazon.com.au/*",
      "https://*.amazon.nl/*",
      "https://*.amazon.ca/*",
      "https://*.amazon.sa/*",
      "https://*.amazon.sg/*",
      "https://*.amazon.se/*",
      "https://*.amazon.es/*",
      "https://*.amazon.de/*",
      "https://*.amazon.com.tr/*",
      "https://*.amazon.com.br/*",
      "https://*.amazon.fr/*",
      "https://*.amazon.com.be/*",
      "https://*.amazon.pl/*",
      "https://*.amazon.com.mx/*",
      "https://*.amazon.cn/*",
      "https://*.primevideo.com/*"
    ],
    "run_at": "document_start",
    "js": [
      "js/content_script.js"
    ],
    "css": [
      "css/content_style.css"
    ]
  }],
  "icons": {
    "128": "icons/icon128.png"
   },
  "permissions":  ["tabs", "scripting", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}